@model IEnumerable<TrainApp.Models.Schedules>

@{
    ViewData["Title"] = "Розклад";
}

<h2 class="text-center">Розклад поїздів</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Додати новий розклад</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Поїзд</th>
            <th>Станція відправлення</th>
            <th>Станція прибуття</th>
            <th>Час відправлення</th>
            <th>Час прибуття</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Train.TrainName</td>
                <td>@item.OriginStation.StationName</td>
                <td>@item.DestinationStation.StationName</td>
                <td>@item.DepartureTime.ToString("g")</td>
                <td>@item.ArrivalTime.ToString("g")</td>
                <td>
                    <a asp-action="Редагувати" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Редагувати</a>
                    <a asp-action="Детально" asp-route-id="@item.Id" class="btn btn-info btn-sm">Деталі</a>
                    <a asp-action="Видалити" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>