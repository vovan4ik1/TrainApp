@model TrainApp.Models.Stations

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center text-primary">Редагування станції</h1>

<div class="card shadow-lg p-4 mb-4 bg-white rounded">
    <h4 class="text-secondary">Дані станції</h4>
    <hr />
    <div class="row">
        <div class="col-md-6 mx-auto">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="StationName" class="control-label fw-bold"></label>
                    <input asp-for="StationName" class="form-control shadow-sm" />
                    <span asp-validation-for="StationName" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Region" class="control-label fw-bold"></label>
                    <input asp-for="Region" class="form-control shadow-sm" />
                    <span asp-validation-for="Region" class="text-danger"></span>
                </div>

                <div class="form-group mt-4 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">Назад</a>
                    <input type="submit" value="Зберегти" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
