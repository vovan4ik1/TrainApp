@model TrainApp.Models.Stations

@{
    ViewData["Title"] = "Create";
}

<h1>Створити  Станцію</h1>

<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="form-group">
                <label asp-for="StationName" class="control-label"></label>
                <input asp-for="StationName" class="form-control" />
                <span asp-validation-for="StationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Region" class="control-label"></label>
                <input asp-for="Region" class="form-control" />
                <span asp-validation-for="Region" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>
<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
    <input type="submit" value="Cтворити" class="btn btn-primary" position="" />
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
